<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../eventsblog.css">
    <title>Document</title>
</head>
<body>
    <%- include("header", {active: "", name: name}); %>
        <% if(events!=null) { %>
            <% events.forEach(function(item){ %>
                <div class="blogs col-10 offset-1">
                    <h4><%= item.event_name %></h4>
                    <div class="container mt-5 mb-5" class="description"><%= item.event_desc %></div>
                    <% if(item.images.length==1) { %> 
                        <img class="image" src="<%= item.images[0] %>" width="60%">
                    <% } else if(item.images.length==2) { %>
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            </ol>
                            <div class="carousel-inner">
                              <div class="carousel-item active">
                                <img class="d-block image" src="<%= item.images[0] %>" width="60%" alt="First slide">
                              </div>
                              <div class="carousel-item">
                                <img class="d-block image" src="<%= item.images[1] %>" width="60%" alt="Second slide">
                              </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="sr-only">Next</span>
                            </a>
                          </div>
                          <% } else if(item.images.length==3) { %>
                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                  <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                  <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                  <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                </ol>
                                <div class="carousel-inner">
                                  <div class="carousel-item active">
                                    <img class="d-block image" src="<%= item.images[0] %>" width="60%" alt="First slide">
                                  </div>
                                  <div class="carousel-item">
                                    <img class="d-block image" src="<%= item.images[1] %>" width="60%" alt="Second slide">
                                  </div>
                                  <div class="carousel-item">
                                    <img class="d-block image" src="<%= item.images[2] %>" width="60%" alt="Third slide">
                                  </div>
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                  <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                  <span class="sr-only">Next</span>
                                </a>
                              </div>
                              <% } else if(item.images.length==4) { %>
                                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                    <ol class="carousel-indicators">
                                      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                      <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                                    </ol>
                                    <div class="carousel-inner">
                                      <div class="carousel-item active">
                                        <img class="d-block image" src="<%= item.images[0] %>" width="60%" alt="First slide">
                                      </div>
                                      <div class="carousel-item">
                                        <img class="d-block image" src="<%= item.images[1] %>" width="60%" alt="Second slide">
                                      </div>
                                      <div class="carousel-item">
                                        <img class="d-block image" src="<%= item.images[2] %>" width="60%" alt="Third slide">
                                      </div>
                                      <div class="carousel-item">
                                        <img class="d-block image" src="<%= item.images[3] %>" width="60%" alt="Fourth slide">
                                      </div>
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                      <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                      <span class="sr-only">Next</span>
                                    </a>
                                  </div>
                                  <% } else if(item.images.length==5) { %>
                                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                        <ol class="carousel-indicators">
                                          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                          <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                                          <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                                        </ol>
                                        <div class="carousel-inner">
                                          <div class="carousel-item active">
                                            <img class="d-block image" src="<%= item.images[0] %>" width="60%" alt="First slide">
                                          </div>
                                          <div class="carousel-item">
                                            <img class="d-block image" src="<%= item.images[1] %>" width="60%" alt="Second slide">
                                          </div>
                                          <div class="carousel-item">
                                            <img class="d-block image" src="<%= item.images[2] %>" width="60%" alt="Third slide">
                                          </div>
                                          <div class="carousel-item">
                                            <img class="d-block image" src="<%= item.images[3] %>" width="60%" alt="Fourth slide">
                                          </div>
                                          <div class="carousel-item">
                                            <img class="d-block image" src="<%= item.images[4] %>" width="60%" alt="Fifth slide">
                                          </div>
                                        </div>
                                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                          <span class="sr-only">Previous</span>
                                        </a>
                                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                          <span class="sr-only">Next</span>
                                        </a>
                                      </div>
                                <% } %>
                </div>
            <% }) %>
        <% } %>

        <script>
            $('.carousel').carousel({
                interval: 2000
            })
        </script>
</body>
</html>