    <body> 
        <%- include("header", {active: "Grievance", name: name}); %>
        <div class="row row-content">
             <div class="col-12 col-md-4 offset-md-4" style="margin-top: 3%; border: 1px #ccc solid; border-radius: 11px;">
                <br>
                <h2 style="text-align: center;">Add Grievance</h2> <br> 
                 <form action="/addgrievenace" method="POST" novalidate id="user-form">
                     <div class="form-group">
                         <label for="title" class="col-md-12 form-label"><b>Title:</b></label> 
                         <div class="col-md-12">
                             <input type="text" class="form-control" id="title" name="title" required>
                         </div>
                     </div>
                     <div class="form-group">
                        <label for="description" class="col-md-12 col-form-label"><b>Description:</b></label>
                        <div class="col-md-12">
                            <textarea rows="8" type="text" class="form-control" id="description" name="description" required></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit"class="btn btn-success offset-2 col-8">
                           <b>Submit</b> 
                        </button>
                    </div>  
                 </form>
                 <br><br>
             </div>
        </div>

            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
